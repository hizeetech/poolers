[Unit]
Description=Gunicorn daemon for PoolBetting (ASGI)
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/poolbetting-main
ExecStart=/root/poolbetting-main/env/bin/gunicorn \
          --access-logfile - \
          --workers 3 \
          --worker-class uvicorn.workers.UvicornWorker \
          --bind 127.0.0.1:8000 \
          poolbetting.asgi:application

[Install]
WantedBy=multi-user.target
